<h1>俳句コメントページ</h1>
<div class="row">
<div class="col-md-6 offset-md-3">
  <div class="card border border-success rounded">
    <div class="card-body">
        <p class="haiku__text"><span><%= @haiku.haiku1 %></span></p>
        <p class="haiku__text"><span><%= @haiku.haiku2 %></span></p>
        <p class="haiku__text"><span><%= @haiku.haiku3 %></span></p>
    </div>
  </div>
  <% @comment.each do |comment| %>
  <div class="row my-3">
    <div class="col-sm-8 offset-sm-2">
    <div class="card border border-success rounded">
      <div class="card-body">
        <p class="comment__text"><span><%= comment.comment1 %></span></p>
        <p class="comment__text"><span><%= comment.comment2 %></span></p>
        <p class="comment__text"><span><%= comment.comment3 %></span></p>
      </div>
      <div class="card-footer border-success"><p><%= comment.user.name %></p></div>
    </div>
    </div>
  </div>
  <% end %>
  <div class="row my-3">
    <div class="col-sm-8 offset-sm-2">
      <%= link_to(new_comment_path(haiku_id: params[:haiku_id]),class: ('btn btn-secondary btn-block')) do %>
          <i class="fas fa-trash-alt"></i>
          <span>コメント</span>
      <% end %>
    </div>
  </div>
</div>
</div>
