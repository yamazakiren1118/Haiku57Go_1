
<div class="row">
  <div class="col-sm-8 offset-sm-2">
  <h1>俳句編集ページ</h1>
  <%= form_with model:@haiku,url:"/edit/haiku",method: :put do |form| %>
    <div class="form-group">
      <%= form.label :haiku1 %>
      <%= form.text_field :haiku1,class:('form-control') %>
    </div>
    <div class="form-group">
      <%= form.label :haiku2 %>
      <%= form.text_field :haiku2,class:('form-control') %>
    </div>
    <div class="form-group">
      <%= form.label :haiku3 %>
      <%= form.text_field :haiku3,class:('form-control') %>
    </div>
    <%= form.hidden_field :haiku_id,value:params[:haiku_id] %>
    <%= form.hidden_field :user_id,value:session[:user_id] %>
    <%= form.submit :送信,class:('btn btn-secondary btn-block')%>
  <% end %>
  </div>
</div>
