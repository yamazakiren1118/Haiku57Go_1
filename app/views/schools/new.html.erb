<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h1>新規教室を追加</h1>
    </div>
</div>
<%= form_with model: @schools,local:true do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name %>

    <%= form.label :address %>
    <%= form.text_field :address %>

    <%= form.label :email %>
    <%= form.text_field :email %>

    <%= form.label :haiku1 %>
    <%= form.text_field :haiku1 %>

    <%= form.label :haiku2 %>
    <%= form.text_field :haiku2 %>

    <%= form.label :haiku3 %>
    <%= form.text_field :haiku3 %>

    <%= form.hidden_field :permit,value: false %>
    <%= form.submit :送信 %>
<% end %>


