<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h1>新規教室を追加</h1>
    </div>
</div>
<div class="row">
    <div class="col-sm-8 offset-sm-2">
            <%= form_with model: @schools,local:true do |form| %>
            <div class="form-group">
                <%= form.label :name %>
                <%= form.text_field :name,class:'form-control' %>
                <% if  @schools.errors.any? %>
                    <p><%= @schools.errors[:name][0] %></p>
                <% end %>
            </div>

            <div class="form-group">
                <%= form.label :address %>
                <%= form.text_field :address,class:'form-control' %>
                <% if  @schools.errors.any? %>
                    <p><%= @schools.errors[:address][0] %></p>
                <% end %>
            </div>

            <div class="form-group">
                <%= form.label :email %>
                <%= form.text_field :email,class:'form-control' %>
                <% if  @schools.errors.any? %>
                    <p><%= @schools.errors[:email][0] %></p>
                <% end %>
            </div>

            <div class="form-group">
                <%= form.label :haiku1 %>
                <%= form.text_field :haiku1,class:'form-control' %>
                <% if  @schools.errors.any? %>
                    <p><%= @schools.errors[:haiku1][0] %></p>
                <% end %>
            </div>

            <div class="form-group">
                <%= form.label :haiku2 %>
                <%= form.text_field :haiku2,class:'form-control' %>
                <% if  @schools.errors.any? %>
                    <p><%= @schools.errors[:haiku2][0] %></p>
                <% end %>
            </div>

            <div class="form-group">
                <%= form.label :haiku3 %>
                <%= form.text_field :haiku3,class:'form-control' %>
                <% if  @schools.errors.any? %>
                    <p><%= @schools.errors[:haiku3][0] %></p>
                <% end %>
            </div>

            <div class="form-group">
                <%= form.hidden_field :permit,value: false %>
                <%= form.submit :送信,class:'btn btn-secondary btn-block' %>
            </div>
            <% end %>
    </div>
</div>




