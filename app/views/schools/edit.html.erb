<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h1>教室情報を編集</h1>
    </div>
</div>
<div class="row">
    <div class="col-sm-8 offset-sm-2">
            <%= form_with model: @school,local:true do |form| %>
            <div class="form-group">
                <%= form.label :name %>
                <%= form.text_field :name,class:'form-control' %>
            </div>

            <div class="form-group">
                <%= form.label :address %>
                <%= form.text_field :address,class:'form-control' %>
            </div>

            <div class="form-group">
                <%= form.label :email %>
                <%= form.text_field :email,class:'form-control' %>
            </div>

            <div class="form-group">
                <%= form.label :haiku1 %>
                <%= form.text_field :haiku1,class:'form-control' %>
            </div>

            <div class="form-group">
                <%= form.label :haiku2 %>
                <%= form.text_field :haiku2,class:'form-control' %>
            </div>

            <div class="form-group">
                <%= form.label :haiku3 %>
                <%= form.text_field :haiku3,class:'form-control' %>
            </div>

            <div class="form-group">
                <%= form.hidden_field :permit %>
                <%= form.submit :送信,class:'btn btn-secondary btn-block' %>
            </div>
            <% end %>
    </div>
</div>



