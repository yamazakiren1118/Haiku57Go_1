

<div class="row">
  <div class="col-sm-8 offset-sm-2">
  <h1>コメントページ</h1>
  <%= form_with model:@comment,local:true do |form| %>
    <div class="form-group">
      <%= form.label :comment1 %>
      <%= form.text_field :comment1,class:('form-control') %>
    </div>
    <div class="form-group">
      <%= form.label :comment2 %>
      <%= form.text_field :comment2,class:('form-control') %>
    </div>
    <div class="form-group">
      <%= form.label :comment3 %>
      <%= form.text_field :comment3,class:('form-control') %>
    </div>
    <%= form.hidden_field :user_id,value:session[:user_id] %>
    <%= form.hidden_field :haiku_id,value:params[:haiku_id] %>
    <%= form.submit :送信,class:('btn btn-secondary btn-block')%>
  <% end %>
  </div>
</div>
