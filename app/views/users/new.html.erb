
<div class="row">
  <div class="col-sm-8 offset-sm-2">
  <h1>新規ユーザー登録</h1>

  <%= form_with model:@user,local:true do |form| %>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name,class:('form-control') %>  
      <% if  @user.errors.any? %>
          <p><%= @user.errors.full_messages_for(:name).first %></p>
      <% end %>
    </div>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email,class:('form-control') %>
      <% if  @user.errors.any? %>
          <p><%= @user.errors.full_messages_for(:email).first %></p>
      <% end %>
    </div>
    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password,class:('form-control') %>
      <% if  @user.errors.any? %>
          <p><%= @user.errors.full_messages_for(:password).first %></p>
      <% end %>
    </div>
    <div class="form-group">
      <%= form.label :password_digest %>
      <%= form.password_field :password_digest,class:('form-control') %>
      <% if  @user.errors.any? %>
          <p><%= @user.errors.full_messages_for(:password_digest).first %></p>
      <% end %>
    </div>
    <%= form.submit :送信,class:('btn btn-secondary btn-block')%>
  <% end %>
  </div>
</div>
