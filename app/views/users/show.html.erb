                <li class="page-item">
                    <a class="page-link" href="/<%= controller_name %>/<%= @haikus[0].user_id %>/?page=<%= x+1 %>"><%= x+1 %></a>
                </li>
            <% end %>
        </ul>
    </nav>
</div>


