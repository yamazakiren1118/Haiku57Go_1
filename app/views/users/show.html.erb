<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>ユーザープロフィール</h1>
        <%= link_to(sort_users_path(carrent_user.id)) do%>
            <button class="btn btn-secondary">いいねした俳句へ</button>
        <% end %>
    </div>
</div>
<div id="haikus_block">
    <%= render partial: "pages/haikus_index",locals: {haikus:@haikus}%>
</div>
