<div class=" row my-3" >
  <div class=" col-sm-6 offset-sm-3">
  <h1>チャットルーム</h1>
    <div class="card border border-success rounded">
      <div class="card-body">
        <p class="haiku__text"><span><%= @chat_p.chat1 %></span></p>
        <p class="haiku__text"><span><%= @chat_p.chat2 %></span></p>
        <p class="haiku__text"><span><%= @chat_p.chat3 %></span></p>
      </div>
      <div class="card-footer border-success">
        
      </div>
    </div>
  </div>

</div>
<div class="row">
  <div class="col-sm-4 banner my-3  offset-sm-4">
      <%= image_tag 'banner_pc.png',class:'pc'%>
      <%= image_tag 'banner_sp.png',class:'sp'%>
  </div>
</div>
<div id="chats">
  <% @chats.each do |chat| %>
  <div class=" row my-3" >
    <div class=" col-sm-4 offset-sm-4">
      <div class="card border border-success rounded">
        <div class="card-body">
          <p class="haiku__text"><span><%= chat.chat1 %></span></p>
          <p class="haiku__text"><span><%= chat.chat2 %></span></p>
          <p class="haiku__text"><span><%= chat.chat3 %></span></p>
        </div>
        <div class="card-footer border-success">
          <%= chat.user.name %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>

<div class="row">
  <div class="col-sm-4 offset-sm-4">
  
  <%= form_with model:@chat,remote:true do |form| %>
    <div class="form-group">
      <%= form.label :chat1 %>
      <%= form.text_field :chat1,class:('form-control') %>
      <% if  @chat.errors.any? %>
          <p><%= @chat.errors.full_messages_for(:chat1).first %></p>
      <% end %>
    </div>
    <div class="form-group">
      <%= form.label :chat2 %>
      <%= form.text_field :chat2,class:('form-control') %>
      <% if  @chat.errors.any? %>
          <p><%= @chat.errors.full_messages_for(:chat2).first %></p>
      <% end %>
    </div>
    <div class="form-group">
      <%= form.label :chat3 %>
      <%= form.text_field :chat3,class:('form-control') %>
      <% if  @chat.errors.any? %>
          <p><%= @chat.errors.full_messages_for(:chat3).first %></p>
      <% end %>
    </div>
    <%= form.hidden_field :user_id,value:session[:user_id] %>
    <%= form.hidden_field :chat_id,value:params[:id] %>
    <%= form.submit :送信,class:('btn btn-secondary btn-block'),id:'btn_chat'%>
  <% end %>
  </div>
</div>
