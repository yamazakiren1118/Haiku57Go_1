
<div class="row">
  <div class="col-sm-8 offset-sm-2">
  <h1>新規ルーム作成</h1>
  <%= form_with model:@chat,local:true do |form| %>
    <div class="form-group">
      <%= form.label :chat1 %>
      <%= form.text_field :chat1,class:('form-control') %>
      <% if  @chat.errors.any? %>
          <p><%= @chat.errors.full_messages_for(:chat1).first %></p>
      <% end %>
    </div>
    <div class="form-group">
      <%= form.label :chat2 %>
      <%= form.text_field :chat2,class:('form-control') %>
      <% if  @chat.errors.any? %>
          <p><%= @chat.errors.full_messages_for(:chat2).first %></p>
      <% end %>
    </div>
    <div class="form-group">
      <%= form.label :chat3 %>
      <%= form.text_field :chat3,class:('form-control') %>
      <% if  @chat.errors.any? %>
          <p><%= @chat.errors.full_messages_for(:chat3).first %></p>
      <% end %>
    </div>
    <%= form.hidden_field :user_id,value:session[:user_id] %>
    <%= form.submit :送信,class:('btn btn-secondary btn-block')%>
  <% end %>
  </div>
</div>
