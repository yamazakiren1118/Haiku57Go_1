<% haikus.each do |haiku| %>
<div class="haiku">
  <p class="haiku__text">
    <span><%= haiku.haiku1 %></span>
    <span><%= haiku.haiku2 %></span>
    <span><%= haiku.haiku3 %></span>
  </p>
  <% if carrent_user != nil %>
    <% if User.find_by(id: haiku.user_id) == carrent_user %>
      <%= form_with url:haiku_path(haiku.id),method: :delete,class:("haiku_del#{haiku.id} aaa") do |form| %>
        
        <%= form.submit class:("haiku_del#{haiku.id}") %>
      <% end %>
      <%= link_to(haiku_path(haiku.id),method: :delete,class: :haiku__del) do %>
          <i class="fas fa-trash-alt"></i>
          <span>削除</span>
      <% end %>
      <%= link_to(edit_haikus_path(haiku.id,haiku_id:haiku.id),class: :haiku__edit) do %>
          <i class="fas fa-trash-alt"></i>
          <span>編集</span>
      <% end %>
    <% else %>
      <%= link_to(haiku_path(haiku.id ,haiku_id: haiku.id),class: :haiku__comment) do %>
          <i class="fas fa-trash-alt"></i>
          <%= haiku.comments.size %>
          <span>コメント</span>
      <% end %>
    <% end %>
  <% end %>
</div>
<% end %>
<%= paginate haikus %>
